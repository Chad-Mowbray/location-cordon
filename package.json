{
  "name": "location-cordon",
  "version": "1.1.0",
  "description": "A CRLF location header sanitizer",
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls",
    "test:coverage": "npm run test -- --coverage --watchAll=false || exit 1"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Chad-Mowbray/location-cordon.git"
  },
  "keywords": [
    "CRLF",
    "location",
    "header",
    "input",
    "sanitize"
  ],
  "author": "Chad Mowbray",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Chad-Mowbray/location-cordon/issues"
  },
  "homepage": "https://github.com/Chad-Mowbray/location-cordon#readme",
  "devDependencies": {
    "coveralls": "^3.1.0",
    "jest": "^26.6.1"
  }
}
